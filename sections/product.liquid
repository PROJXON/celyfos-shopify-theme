{% endstylesheet %}

{% javascript %}
const track = document.querySelector('#slidesTrack');
const slides = document.querySelectorAll('#imageSlideshow .productSlide');
const prevButton = document.querySelector('#prevBtn');
const nextButton = document.querySelector('#nextBtn');
const qtySpan = document.querySelector('#qty');
const priceSpan = document.querySelector('#price');
const variantSelect = document.querySelector('select[name="id"]');
const decreaseQtyBtn = document.querySelectorAll('.qtyBtn')[0];
const increaseQtyBtn = document.querySelectorAll('.qtyBtn')[1];

let currentIndex = 0;

function updateSlidePosition() {
  const slideWidth = track.parentElement.offsetWidth;
  track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
}

window.addEventListener('resize', updateSlidePosition);

if (prevButton) {
  prevButton.addEventListener('click', () => {
    currentIndex = (currentIndex === 0) ? slides.length - 1 : currentIndex - 1;
    updateSlidePosition();
  });
}

if (nextButton) {
  nextButton.addEventListener('click', () => {
    currentIndex = (currentIndex === slides.length - 1) ? 0 : currentIndex + 1;
    updateSlidePosition();
  });
}

function formatMoney(cents, format) {
  if (typeof cents === 'string') cents = cents.replace('.', '');
  const value = parseFloat(cents) / 100;
  format = format || '{{ amount }}';

  function formatWithDelimiters(number, precision, thousands, decimal) {
    if (isNaN(number) || number == null) return 0;
    precision = precision || 2;
    thousands = thousands || ',';
    decimal = decimal || '.';
    number = (number / 1).toFixed(precision);

    const parts = number.split('.');
    const integerPart = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, thousands);
    const decimalPart = parts[1] ? decimal + parts[1] : '';

    return integerPart + decimalPart;
  }

  let formattedValue = '';

  switch (format) {
    case '{{ amount }}':
      formattedValue = formatWithDelimiters(value, 2);
      break;
    case '{{ amount_no_decimals }}':
      formattedValue = formatWithDelimiters(value, 0);
      break;
    case '{{ amount_with_comma_separator }}':
      formattedValue = formatWithDelimiters(value, 2, '.', ',');
      break;
    case '{{ amount_no_decimals_with_comma_separator }}':
      formattedValue = formatWithDelimiters(value, 0, '.', ',');
      break;
    default:
      formattedValue = formatWithDelimiters(value, 2);
      break;
  }

  return formattedValue;
}

function updatePrice() {
  let currPrice;

  if (variantSelect && variantSelect.options.length > 1) {
    const selectedVariant = variantSelect.options[variantSelect.selectedIndex];
    currPrice = parseInt(selectedVariant.getAttribute('data-price'), 10);
  } else currPrice = productData.price;

  const quantity = parseInt(qtySpan.textContent, 10);
  const totalPrice = currPrice * quantity;
  priceSpan.textContent = formatMoney(totalPrice, "{{ shop.money_format }}");
}

decreaseQtyBtn.addEventListener('click', () => {
  let quantity = parseInt(qtySpan.textContent, 10);
  if (quantity > 1) {
    qtySpan.textContent = quantity - 1;
    updatePrice();
  }
});

increaseQtyBtn.addEventListener('click', () => {
  let quantity = parseInt(qtySpan.textContent, 10);
  qtySpan.textContent = quantity + 1;
  updatePrice();
});

if (variantSelect) variantSelect.addEventListener('change', updatePrice);

document.addEventListener('DOMContentLoaded', () => {
  if (variantSelect) {
    Array.from(variantSelect.options).forEach(option => {
      const variantId = option.value;
      const variant = productData.variants.find(v => v.id == variantId);
      if (variant) option.setAttribute('data-price', variant.price);
    });
  }

  updatePrice();
});
{% endjavascript %}

