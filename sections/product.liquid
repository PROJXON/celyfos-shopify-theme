{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<div class="flex gap-4 flex-col lg:flex-row">
  <div id="imageSlideshow" class="flex-1 relative overflow-hidden w-1/2 lg:w-full h-fit !mx-auto">
    {% assign images = product.images %}
    <div id="slidesTrack" class="duration-300 ease-in-out w-full flex">
      {% for image in images %}
        <div class="productSlide min-w-full flex items-center">
          {% render 'image', class: 'object-cover', image: image %}
        </div>
      {% endfor %}
    </div>
    {% if images.size > 1 %}
      <button id="prevBtn" class="absolute top-1/2 -translate-y-1/2 !bg-black opacity-50 text-white p-2 cursor-pointer z-10 left-2" aria-label="Previous slide">&lt;</button>
      <button id="nextBtn" class="absolute top-1/2 -translate-y-1/2 !bg-black opacity-50 text-white p-2 cursor-pointer z-10 right-2" aria-label="Next slide">&gt;</button>
    {% endif %}
  </div>
  <div class="flex-1">
    <div id="productInfo">
      <h2 class="text-center topHeader">{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>
      <p>{{ product.description }}</p>
    </div>
    <div class="product-form">
      {% form 'product', product %}
        {% assign current_variant = product.selected_or_first_available_variant %}
        <div id="cartAdder" class="flex !my-3 gap-3 items-center flex-wrap">
          {% if product.variants.size > 1 %}
            <select name="id" class="flex-1">
              {% for variant in product.variants %}
                <option
                  value="{{ variant.id }}"
                  {% if variant == current_variant %}
                    selected="selected"
                  {% endif %}
                  data-price="{{ variant.price | money_without_currency }}"
                >
                  {{ variant.title }} - {{ variant.price | money }}
                </option>
              {% endfor %}
            </select>
          {% endif %}
          <div class="flex items-center rounded-2xl">
            <a class="qtyBtn roundBtn btn w-12 h-12 flex items-center justify-center rounded-xl disabled:opacity-30 disabled:hover:bg-transparent transition-all duration-200 active:scale-90 text-3xl" aria-label="Decrease quantity">
              -
            </a>
            <span id="qty" class="w-14 text-center font-bold text-2xl text-slate-800 select-none">
              1
            </span>
            <a class="qtyBtn roundBtn btn w-12 h-12 flex items-center justify-center rounded-xl disabled:opacity-30 disabled:hover:bg-transparent transition-all duration-200 active:scale-90 text-3xl" aria-label="Increase quantity">+</a>
          </div>
          <div class="text-lg flex gap-1">
            <b>Price: </b><span id="price" class="inline-block"></span>
          </div>
        </div>
        {{ form | payment_button }}
      {% endform %}
    </div>
  </div>
</div>
<script>
  const productData = {{ product | json }};
</script>

{% stylesheet %}
