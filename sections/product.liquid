{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<div class="flex gap-4 flex-col lg:flex-row">
  <div id="imageSlideshow" class="flex-1 relative overflow-hidden w-1/2 lg:w-full h-fit !mx-auto">
    {% assign images = product.images %}
    <div id="slidesTrack" class="duration-300 ease-in-out w-full flex">
      {% for image in images %}
        <div class="productSlide min-w-full flex items-center">
          {% render 'image', class: 'object-cover', image: image %}
        </div>
      {% endfor %}
    </div>
    {% if images.size > 1 %}
      <button id="prevBtn" class="absolute top-1/2 -translate-y-1/2 !bg-black opacity-50 text-white p-2 cursor-pointer z-10 left-2" aria-label="Previous slide">&lt;</button>
      <button id="nextBtn" class="absolute top-1/2 -translate-y-1/2 !bg-black opacity-50 text-white p-2 cursor-pointer z-10 right-2" aria-label="Next slide">&gt;</button>
    {% endif %}
  </div>
  <div class="flex-1">
    <div id="productInfo">
      <h2 class="text-center topHeader">{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>
      <p>{{ product.description }}</p>
    </div>
    <div class="product-form">
      {% form 'product', product %}
        {% assign current_variant = product.selected_or_first_available_variant %}
        <div id="cartAdder" class="flex !my-3 gap-3">
          <select name="id" class="min-w-0 grow shrink">
            {% for variant in product.variants %}
              <option
                value="{{ variant.id }}"
                {% if variant == current_variant %}
                  selected="selected"
                {% endif %}
              >
                {{ variant.title }} - {{ variant.price | money }}
              </option>
            {% endfor %}
          </select>
          <input type="text" name="quantity" min="1" value="1" class="min-w-0 grow shrink">
          <input type="submit" value="Add to cart" class="roundBtn !font-bold flex-1 cursor-pointer">
        </div>
        {{ form | payment_button }}
      {% endform %}
    </div>
  </div>
</div>

{% stylesheet %}
button.shopify-payment-button__button {
  color: black;
  font-weight: bold;
  background: var(--accent-color) !important;
  box-shadow: 1.5px 1.5px 2px var(--text-color);
  border-radius: 999rem;
  transition: opacity 0.3s;
}
{% endstylesheet %}

{% javascript %}
const track = document.querySelector('#slidesTrack');
const slides = document.querySelectorAll('#imageSlideshow .productSlide');
const prevButton = document.querySelector('#prevBtn');
const nextButton = document.querySelector('#nextBtn');

let currentIndex = 0;

function updateSlidePosition() {
  const slideWidth = track.parentElement.offsetWidth;
  track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
}

window.addEventListener('resize', updateSlidePosition);

prevButton.addEventListener('click', () => {
  currentIndex = (currentIndex === 0) ? slides.length - 1 : currentIndex - 1;
  updateSlidePosition();
});

nextButton.addEventListener('click', () => {
  currentIndex = (currentIndex === slides.length - 1) ? 0 : currentIndex + 1;
  updateSlidePosition();
});
{% endjavascript %}

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
