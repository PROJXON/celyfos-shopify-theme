{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

<div id="productPage">
  <div id="imageSlideshow">
    {% assign images = product.images %}
    <div id="slidesTrack">
      {% for image in images %}
        <div class="product-slide">
          {% render 'image', class: 'product-image', image: image %}
        </div>
      {% endfor %}
    </div>
    {% if images.size > 1 %}
      <button class="slideshow-button prev" aria-label="Previous slide">&lt;</button>
      <button class="slideshow-button next" aria-label="Next slide">&gt;</button>
    {% endif %}
  </div>
  <div>
    <div id="productInfo">
      <h2>{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>
      <p>{{ product.description }}</p>
    </div>
    <div class="product-form">
      {% form 'product', product %}
        {% assign current_variant = product.selected_or_first_available_variant %}
        <div id="cartAdder">
          <select name="id">
            {% for variant in product.variants %}
              <option
                value="{{ variant.id }}"
                {% if variant == current_variant %}
                  selected="selected"
                {% endif %}
              >
                {{ variant.title }} - {{ variant.price | money }}
              </option>
            {% endfor %}
          </select>
          <input type="text" name="quantity" min="1" value="1">
          <input type="submit" value="Add to cart" class="roundBtn">
        </div>
        {{ form | payment_button }}
      {% endform %}
    </div>
  </div>
</div>

{% stylesheet %}
div#productPage {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

div#imageSlideshow {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: fit-content;
}

#slidesTrack, #cartAdder {
  display: flex;
}

#slidesTrack {
  transition: transform 0.5s ease-in-out;
  width: 100%;
}

.product-slide {
  min-width: 100%;
  display: flex;
  align-items: center;
}

.product-image {
  object-fit: cover;
}

.slideshow-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  z-index: 10;
}

.slideshow-button.prev {
  left: 10px;
}

.slideshow-button.next {
  right: 10px;
}

#cartAdder {
  margin: 1rem 0;
  gap: 1rem;
}

#cartAdder * {
  flex: 1;
}

button.shopify-payment-button__button {
  color: black !important;
  font-weight: bold !important;
  background: var(--accent-color) !important;
  box-shadow: 1.5px 1.5px 2px var(--text-color) !important;
  border-radius: 999rem !important;
}

div#productInfo h2 {
  text-align: center;
}

@media screen and (max-width: 1150px) {
  div#productPage {
    grid-template-columns: 1fr;
  }

  div#imageSlideshow {
    width: 50%;
    margin: auto;
  }
}
{% endstylesheet %}

{% javascript %}
  const track = document.querySelector('#slidesTrack');
  const slides = document.querySelectorAll('#imageSlideshow .product-slide');
  const prevButton = document.querySelector('.slideshow-button.prev');
  const nextButton = document.querySelector('.slideshow-button.next');

  let currentIndex = 0;

  function updateSlidePosition() {
    const slideWidth = track.parentElement.offsetWidth;
    track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
  }

  window.addEventListener('resize', updateSlidePosition);

  prevButton.addEventListener('click', () => {
    currentIndex = (currentIndex === 0) ? slides.length - 1 : currentIndex - 1;
    updateSlidePosition();
  });

  nextButton.addEventListener('click', () => {
    currentIndex = (currentIndex === slides.length - 1) ? 0 : currentIndex + 1;
    updateSlidePosition();
  });
{% endjavascript %}

