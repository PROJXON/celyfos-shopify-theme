<section>
  <h2>{{ section.settings.title }}</h2>
  <div class="product-grid">
    {% for product in collections[section.settings.collection].products %}
      <a href="{{ product.url }}">
        {{ product.featured_image | image_url: width:500 | image_tag }}
        <h3>{{ product.title }}</h3>
        {{ product.price | money }}
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "presets": [{"name": "Collection"}]
}
{% endschema %}