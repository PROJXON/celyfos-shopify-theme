<section id="celyfosHero">
  <img
    src="{{ section.settings.image | image_url: width: 2000 }}"
    class="hero-image"
  />
  <div class="hero-content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.text }}</p>
    <a href="{{ section.settings.link }}">
      {{ section.settings.button }}
    </a>
  </div>
</section>

{% stylesheet %}
#celyfosHero {
  height: 100vh;
  position: relative;
}

.hero-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-content {
  position: relative;
  z-index: 2;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Protective Elegance"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Hero Text"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button URL"
    }
  ],
  "presets": [{"name": "Hero"}]
}
{% endschema %}