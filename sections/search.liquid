{% comment %}
  This section is used in the search template to render search results for
  products, articles, and pages.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/search
{% endcomment %}

<h1 class="topHeader">{{ 'search.title' | t }}</h1>

<form action="{{ routes.search_url }}" method="get" role="search" class="!mx-auto">
  <input
    type="search"
    class="border p-1 !mr-1"
    size="50"
    name="q"
    value="{{ search.terms | escape }}"
    placeholder="{{ 'search.placeholder' | t }}"
  >
  <button type="submit" class="roundBtn">{{ 'search.submit' | t }}</button>
</form>

{% if search.performed %}
  {% if search.results_count == 0 %}
    <p class="text-center">{{ 'search.no_results_html' | t: terms: search.terms }}</p>
  {% else %}
    <p class="text-center !mb-2">{{ 'search.results_for_html' | t: terms: search.terms, count: search.results_count }}</p>

    <div>
      {% paginate search.results by 20 %}
        {% render 'product-grid', items: search.results %}
        {% render 'pagination', paginate: paginate %}
      {% endpaginate %}
    </div>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "t:general.search",
  "settings": []
}
{% endschema %}
